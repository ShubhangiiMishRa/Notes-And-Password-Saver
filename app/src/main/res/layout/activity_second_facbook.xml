<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".SecondActivityFacbook">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/welcome"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="WELCOME"
            android:textColor="#79E8D2"
            android:textSize="48sp" />

        <Button
            android:id="@+id/notesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#306B73"
            android:drawableLeft="@drawable/ic_baseline_notes_24"
            android:drawablePadding="100dp"
            android:onClick="notesclick"
            android:padding="20dp"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:text="Notes"
            android:textSize="20sp"
            app:iconPadding="10dp" />

        <Button
            android:id="@+id/passwordButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="350dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#2D656C"
            android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
            android:drawablePadding="20dp"
            android:onClick="passwordclick"
            android:padding="20dp"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            android:text="Password"
            android:textSize="20sp" />

        <Button
            android:id="@+id/signout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="170dp"
            android:layout_marginTop="600dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#6DCDDA"
            android:onClick="signout"
            android:text="sign out"
            android:textColor="#020101"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="100dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="name"
            android:textColor="#56F8F8"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="100dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="gmail"
            android:textColor="#56F8F8"
            android:textSize="16sp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>